<h1> All Users</h1>
<a href="/users/new">Add a New User</a> | 
<a href="/users/total">Total Number of Users</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr class="table-secondary">
            <td>ID</td>
            <td>Name</td>
            <td>Created At</td>
            <td>Updated At</td>
            <td>Actions</td>
        </tr>
    </thead>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td>
            <button action='/users/<%= user.id %>' type="button" class="btn btn-secondary btn-sm">Details</button> |
            <button action='/users/<%= user.id %>/edit' type="button" class="btn btn-primary btn-sm">Edit</button> |
            <button action='/users/<%= user.id %>' type="button" class="btn btn-danger btn-sm">Destroy</button>
        
            <%= button_to "Show", action: "show" %>
            
            <form action="/users/<%= user.id %>/edit" method="get">
                <input type="hidden" name="_method" value="patch">
                <input value="Edit" type="button" />
            </form>
            <a href="/users/<%= user.id %>" data-method="delete">Delete</a>
        </td>
    </tr>
    <% end %>
</table>
